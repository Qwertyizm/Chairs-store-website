<!-- views/search.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results</title>
    <link rel="stylesheet" type="text/css" href="../styles.css"> <!-- Zaktualizowana ścieżka -->
</head>

<body>
    <div class="navbar">
        <div class="logo">
            <a href="/">
                <img src="https://i.imgur.com/wMlNUW0.png" alt="Logo">
            </a>
        </div>
        <a href="/login">
            <div class="login-button">
                Log in
            </div>
        </a>
    </div>
    <div class="content-container">
        <div class="search-results-container">
            
            <h2>Search Results for "<%= searchTerm %>"</h2>
            <% if (searchResults.length === 0) { %>
                <p>No results found.</p>
            <% } else { %>
                <div class="product-container">
                    <% searchResults.forEach(product => { %>
                        <!-- Dodaj kod HTML do wyświetlenia każdego produktu w wynikach wyszukiwania -->
                        <a href="/product/<%= product.id %>" class="product-tile" data-name="<%= product.name %>"
                            data-price="<%= product.price %>" data-quantity="<%= product.quantity %>"
                            data-height="<%= product.height %>" data-width="<%= product.width %>"
                            data-depth="<%= product.depth %>" data-color="<%= product.colour %>">
                            <img src="<%= product.image %>" alt="<%= product.name %>" style="max-width: 100%; height: auto;">
                            <h2><%= product.name %></h2>
                            <p>Price: <%= product.price %> zł</p>
                            <p>Quantity: <%= product.quantity %></p>
                        </a>
                    <% }); %>
                </div>
            <% } %>
        </div>
    </div>
</body>

</html>
