<!-- views/navbar.ejs -->

    <div class="navbar">
        <div class="logo">
            <a href="/">
                <img src="https://i.imgur.com/wMlNUW0.png" alt="Logo">
            </a>
        </div>
        <% if(locals.title){ %>
            <div class="navbar-title">
                <%= title %>
            </div>
        <% } %>

        <% if(locals.searchContainer){ %>
            <%- searchContainer %>
        <% } %>

        <% if(locals.sortDropdown){ %>
            <%- sortDropdown %>
        <% } %>

        <% if (!user_cookie) { %>
            <a href="/login">
                <div class="login-button">
                    Log in
                </div>
            </a>
        <% } else { %>
            <div style="display:flex; left: 81%;border: 1px solid #ccc; padding: 10px; border-radius: 5px; background-color: #9a758a; font-weight: bold;">
                <%= user_cookie %>
            </div>

            <a href="/cart" style="display: flex">
                <img src="../Koszyk.png" alt="Cart" height="60">
            </a>

            <a href="/logout">
                <div class="login-button">
                    Log out
                </div>
            </a>
        <% } %>
    </div>
