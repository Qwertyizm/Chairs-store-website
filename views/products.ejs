<!-- views/products.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products</title>
    <link rel="stylesheet" type="text/css" href="/styles.css"> <!-- Zaktualizowana ścieżka -->
    <style>
        /* styles.css */

        body {
            font-family: 'Arial', sans-serif;
            /* Zmiana na bezszeryfową czcionkę, np. Arial */
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
        }

        h1 {
            color: #333;
            text-decoration: none;
            /* Usunięcie podkreślenia dla h1 */
        }



        .product-tile img {
            max-width: 100%;
            height: auto;
        }

        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f4f4f4;
            text-align: center;
        }

        .navbar {
            position: fixed;
            top: 0;
            width: 100%;
            margin-left: 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: rgba(191, 187, 220, 1);
            color: #333;
            padding: 10px;
            z-index: 1000;
        }

        .logo img {
            width: 100px;
            height: auto;
        }

        .login-button {
            background-color: rgba(95, 23, 60, 1);
            color: rgba(191, 187, 220, 1);
            border: none;
            padding: 10px 20px;
            text-decoration: none;
            font-family: 'Arial', sans-serif;
            font-size: 1em;
            cursor: pointer;
        }

        .navbar-title {
            font-size: 1.5em;
            margin: 0 auto;
        }

        .content-container {
            margin-top: 60px;
            padding: 20px;
        }


        .product-tile {
            border: 1px solid #ddd;
            padding: 10px;
            margin: 10px;
            text-align: center;
            max-width: 200px;
        }

        a {
            color: black;
            text-decoration: none;
        }


        .product-container {
            display: flex;
            flex-wrap: wrap;
        }

        .product-tile {
            border: 1px solid #ddd;
            padding: 10px;
            margin: 10px;
            text-align: center;
            max-width: 200px;
        }
    </style>
</head>

<body>
    <div class="navbar">
        <div class="logo">
            <a href="/">
                <img src="https://i.imgur.com/wMlNUW0.png" alt="Logo">
            </a>
        </div>
        <div class="navbar-title">
            Products
        </div>
        <a href="/login">
            <div class="login-button">
                Zaloguj
            </div>
        </a>
    </div>

    <div class="content-container">
        <h1>Products</h1>

        <div class="product-container">
            <% products.forEach(product=> { %>
                <a href="/product/<%= product.id %>">
                    <div class="product-tile">
                        <img src="<%= product.image %>" alt="<%= product.name %>"
                            style="max-width: 100%; height: auto;">
                        <h2>
                            <%= product.name %>
                        </h2>
                        <p>Price: <%= product.price %>
                        </p>
                        <p>Quantity: <%= product.quantity %>
                        </p>
                    </div>
                </a>
                <% }); %>
        </div>
    </div>
</body>

</html>