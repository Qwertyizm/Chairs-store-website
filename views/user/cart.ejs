<!-- views/home.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Witaj w sklepie lKEA</title>
    <link rel="stylesheet" type="text/css" href="styles.css">
</head>

<body>
    <!-- Pasek nawigacyjny -->
    <div class="navbar">
        <div class="logo">
            <a href="/">
                <img src="https://i.imgur.com/wMlNUW0.png" alt="Logo">
            </a>
        </div>
            <% if (!user_cookie) { %>
                <a href="/login">
                    <div class="login-button">
                        Log in
                    </div>
                </a>
            <% } else { %>
                <div >
                    <%= user_cookie %>
                </div>
                <a href="/logout">
                    <div class="login-button">
                        Log out
                    </div>
                </a>
            <% } %>
    </div>

    <div id="welcome-container">
        <% if (products) { %>
            <% products.forEach (product => { %>
                <%= product.id %>
        <% })} %>

    </div>
</body>

</html>
